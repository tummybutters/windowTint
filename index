    <script>
        (() => {
            const rows = Array.from(document.querySelectorAll('[data-carousel-row="reviews"]'));
            if (rows.length === 0) {
                return;
            }

            const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)');
            let isPaused = prefersReducedMotion.matches;
            let activeRow = null;
            let startX = 0;
            let startScrollLeft = 0;
            let lastTime = null;
            let resumeTimeout;
            const rowStates = new Map();
            const speed = 32;

            const wrapOffset = (state) => {
                if (!state || state.resetPoint <= 0) {
                    return;
                }
                if (state.offset >= state.resetPoint) {
                    state.offset -= state.resetPoint;
                } else if (state.offset < 0) {
                    state.offset += state.resetPoint;
                }
            };

            const setupRow = (row) => {
                const track = row.querySelector('.reviews__track');
                if (!track) {
                    return;
                }
                if (!track.dataset.cloned) {
                    const cards = Array.from(track.children);
                    cards.forEach((card) => {
                        const clone = card.cloneNode(true);
                        clone.setAttribute('aria-hidden', 'true');
                        track.appendChild(clone);
                    });
                    track.dataset.cloned = 'true';
                }
                const direction = row.dataset.direction === 'left' ? -1 : 1;
                const state = {
                    track,
                    direction,
                    resetPoint: track.scrollWidth / 2,
                    offset: 0
                };
                if (direction === -1) {
                    state.offset = state.resetPoint;
                    row.scrollLeft = state.offset;
                } else {
                    state.offset = row.scrollLeft;
                }
                rowStates.set(row, state);
            };

            rows.forEach(setupRow);

            const updateResetPoints = () => {
                rowStates.forEach((state, row) => {
                    state.resetPoint = state.track.scrollWidth / 2;
                    state.offset = row.scrollLeft;
                    wrapOffset(state);
                    row.scrollLeft = state.offset;
                });
            };

            const tick = (time) => {
                if (lastTime === null) {
                    lastTime = time;
                }
                const delta = time - lastTime;
                if (!isPaused) {
                    rowStates.forEach((state, row) => {
                        if (state.resetPoint <= row.clientWidth) {
                            return;
                        }
                        state.offset += (speed * delta) / 1000 * state.direction;
                        wrapOffset(state);
                        row.scrollLeft = state.offset;
                    });
                }
                lastTime = time;
                window.requestAnimationFrame(tick);
            };

            const pauseAuto = () => {
                isPaused = true;
                if (resumeTimeout) {
                    window.clearTimeout(resumeTimeout);
                }
            };

            const resumeAuto = () => {
                if (prefersReducedMotion.matches) {
                    return;
                }
                isPaused = false;
                lastTime = null;
            };

            const handlePointerDown = (event) => {
                if (event.target.closest('a')) {
                    return;
                }
                pauseAuto();
                activeRow = event.currentTarget;
                startX = event.clientX;
                startScrollLeft = activeRow.scrollLeft;
                const state = rowStates.get(activeRow);
                if (state) {
                    state.offset = startScrollLeft;
                }
                activeRow.classList.add('is-dragging');
                activeRow.setPointerCapture(event.pointerId);
            };

            const handlePointerMove = (event) => {
                if (!activeRow) {
                    return;
                }
                const state = rowStates.get(activeRow);
                if (!state) {
                    return;
                }
                const delta = event.clientX - startX;
                state.offset = startScrollLeft - delta;
                wrapOffset(state);
                activeRow.scrollLeft = state.offset;
            };

            const handlePointerUp = (event) => {
                if (!activeRow) {
                    return;
                }
                activeRow.classList.remove('is-dragging');
                const state = rowStates.get(activeRow);
                if (state) {
                    state.offset = activeRow.scrollLeft;
                }
                try {
                    activeRow.releasePointerCapture(event.pointerId);
                } catch (err) {
                    // no-op
                }
                activeRow = null;
                resumeTimeout = window.setTimeout(resumeAuto, 500);
            };

            const handleWheel = (event) => {
                pauseAuto();
                const state = rowStates.get(event.currentTarget);
                if (state) {
                    state.offset = event.currentTarget.scrollLeft;
                }
                resumeTimeout = window.setTimeout(resumeAuto, 700);
            };

            rows.forEach((row) => {
                row.addEventListener('pointerdown', handlePointerDown);
                row.addEventListener('pointermove', handlePointerMove);
                row.addEventListener('pointerup', handlePointerUp);
                row.addEventListener('pointercancel', handlePointerUp);
                row.addEventListener('pointerleave', handlePointerUp);
                row.addEventListener('wheel', handleWheel, { passive: true });
            });
            window.addEventListener('resize', updateResetPoints);

            window.requestAnimationFrame(tick);
        })();
    </script>

    <!-- EmailJS Contact Form Handler -->
    <script type="text/javascript">
        (function () {
            // ========================================
            // EMAILJS CONFIGURATION
            // Replace YOUR_SERVICE_ID with your actual EmailJS Service ID
            // ========================================
            const EMAILJS_PUBLIC_KEY = 'leAlCbwYj8qNqMhA1';
            const EMAILJS_SERVICE_ID = 'YOUR_SERVICE_ID';  // <-- REPLACE THIS
            const EMAILJS_TEMPLATE_ID = 'template_p1smkx6';

            // Initialize EmailJS
            emailjs.init(EMAILJS_PUBLIC_KEY);

            // Get form elements
            const form = document.getElementById('contact-form');
            const submitBtn = document.getElementById('submit-btn');
            const formStatus = document.getElementById('form-status');

            if (form) {
                form.addEventListener('submit', function (event) {
                    event.preventDefault();

                    // Disable button and show loading state
                    submitBtn.disabled = true;
                    submitBtn.textContent = 'Sending...';
                    formStatus.textContent = '';
                    formStatus.className = 'form-status';

                    // Get form data
                    const formData = new FormData(form);

                    // Build the message content for EmailJS
                    const title = formData.get('title') || 'New Quote Request';
                    const name = (formData.get('name') || '').trim() || 'Not provided';
                    const phone = (formData.get('phone') || '').trim() || 'Not provided';
                    const email = (formData.get('email') || '').trim() || 'Not provided';
                    const vehicle = (formData.get('vehicle') || '').trim() || 'Not provided';
                    const service = (formData.get('service') || '').trim() || 'Not provided';
                    const details = (formData.get('details') || '').trim() || 'None';
                    const message = [
                        title,
                        '-------------------------',
                        'Contact',
                        `Name: ${name}`,
                        `Phone: ${phone}`,
                        `Email: ${email}`,
                        '',
                        'Vehicle',
                        `Vehicle: ${vehicle}`,
                        `Service: ${service}`,
                        '',
                        'Additional Details',
                        details
                    ].join('\n');

                    const templateParams = {
                        title,
                        name,
                        email,
                        phone,
                        vehicle,
                        service,
                        details,
                        message
                    };

                    // Send email via EmailJS
                    emailjs.send(EMAILJS_SERVICE_ID, EMAILJS_TEMPLATE_ID, templateParams)
                        .then(function (response) {
                            console.log('SUCCESS!', response.status, response.text);
                            formStatus.textContent = '‚úì Message sent successfully! We\'ll get back to you soon.';
                            formStatus.className = 'form-status form-status--success';
                            form.reset();
                        })
                        .catch(function (error) {
                            console.error('FAILED...', error);
                            formStatus.textContent = '‚úó Failed to send message. Please call us at (714) 254-5641.';
                            formStatus.className = 'form-status form-status--error';
                        })
                        .finally(function () {
                            submitBtn.disabled = false;
                            submitBtn.textContent = 'Send Request';
                        });
                });
            }
        })();
    </script>
</body>

</html>
